{
    "name": "Marketplace Extension",
    "version": "1.0.0",
    "description": "Manage your listings from your web browser",
    "manifest_version": 3,
    "author": "Bonnie Reed",
    "permissions": ["tabs"],
    "options_page": "options.html",
    "action": {
        "default_popup": "popup.html",
        "default_title": "Marketplace Extension",
        "default_icon": {
            "16": "./assets/images/logo16.png",
            "32": "./assets/images/logo32.png",
            "48": "./assets/images/logo48.png",
            "128": "./assets/images/logo128.png"
        }
    },
    "icons": {
        "16": "./assets/images/logo16.png",
        "32": "./assets/images/logo32.png",
        "48": "./assets/images/logo48.png",
        "128": "./assets/images//logo128.png"
    }
}
